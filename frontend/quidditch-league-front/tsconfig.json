{
  "compilerOptions": {
    "target": "es2017",              
    "module": "es6",             
    "outDir": "./public/js",          
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "lib": ["es2017", "dom"],
    "allowJs": true
  },
  "include": ["public/js/**/*.ts", "public/validations/validations.ts"],
  "exclude": ["node_modules", "__pruebas__"]
}
